<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>Servlets.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/NewsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchResultServlet</servlet-name>
        <servlet-class>Servlets.SearchResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchResultServlet</servlet-name>
        <url-pattern>/SearchResultServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateNewsServlet</servlet-name>
        <servlet-class>Servlets.CreateNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateNewsServlet</servlet-name>
        <url-pattern>/CreateNewsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterS</servlet-name>
        <jsp-file>/RegisterS.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterS</servlet-name>
        <url-pattern>/Registration-Form</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginS</servlet-name>
        <jsp-file>/LoginS.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginS</servlet-name>
        <url-pattern>/Login-Form</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewsS</servlet-name>
        <jsp-file>/NewsS.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsS</servlet-name>
        <url-pattern>/NewsS</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchResultS</servlet-name>
        <jsp-file>/SearchResultS.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchResultS</servlet-name>
        <url-pattern>/SearchResultS</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateNewsS</servlet-name>
        <jsp-file>/CreateNewsS.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateNewsS</servlet-name>
        <url-pattern>/CreateNewsS</url-pattern>
    </servlet-mapping>
</web-app>